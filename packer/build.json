{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECURE_ACCESS_KEY`}}",
    "availability_zone": "us-west-2a",
    "spot_price": "0.15"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ami_name": "machine_learning_gpu {{timestamp}}",
    "instance_type": "g2.2xlarge",
    "region": "us-west-2",
    "source_ami": "ami-5189a661",
    "ssh_username": "ubuntu",
    "associate_public_ip_address": true,
    "ssh_private_ip": false
  }],
  "provisioners": [
    {"type": "shell", "script": "shell/harden.sh", "pause_before": "30s"},
    {"type": "shell", "script": "shell/setup.sh"},
    {"type": "shell", "script": "shell/reboot.sh"},
    {"type": "shell", "script": "shell/ipython_notebook_server.sh", "pause_before": "60s"}
  ]
}
